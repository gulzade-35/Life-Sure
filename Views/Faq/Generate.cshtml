@model LifeSure.Models.ViewModels.FaqViewModel
@{
    ViewBag.Title = "Soru-Cevap Üret";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-20 card-box mb-30">
    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Yapay Zeka ile Soru & Cevap Üret</h4>
            <p>Belirli bir konuya göre otomatik soru ve cevap oluşturabilirsiniz.</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @using (Html.BeginForm("Generate", "Faq", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="Prompt">Prompt (Konu giriniz)</label>
            @Html.TextBoxFor(m => m.Prompt, new { @class = "form-control", placeholder = "Örn: Hayat sigortası avantajları" })
        </div>

        @* Soru oluştuktan sonra kaybolmaması için gizli alanda tutuyoruz *@
        @Html.HiddenFor(m => m.Question)

        <div class="form-group mt-3">
            <button type="submit" name="submitType" value="SoruOlustur" class="btn btn-primary">
                Soru Oluştur
            </button>
            <button type="submit" name="submitType" value="CevapOlustur" class="btn btn-success ml-2">
                Cevap Oluştur
            </button>
        </div>

        <hr />

        @* Formun içindeyiz ama HTML seviyesinde if kontrolleri *@
        if (Model != null && !string.IsNullOrEmpty(Model.Question))
        {
            <div class="alert alert-info mt-3">
                <strong>Oluşturulan Soru:</strong>
                <p>@Model.Question</p>
            </div>
        }

        if (Model != null && !string.IsNullOrEmpty(Model.Answer))
        {
            <div class="alert alert-success mt-3">
                <strong>Oluşturulan Cevap:</strong>
                <p>@Model.Answer</p>
            </div>
        }
    }
</div>