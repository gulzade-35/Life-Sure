@model IEnumerable<LifeSure.Models.DataModels.TblAbout>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pd-20 card-box mb-30">
    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Hakkımızda</h4>
        </div>
        <div class="pull-right">
            <a href="@Url.Action("AddAbout","About")" class="btn btn-success btn-sm ">
            <i class="fa fa-plus"></i> Yeni Ekle
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Açıklama</th>
                <th>Görsel URL</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AboutId</td>
                    <td>@item.Description</td>
                    <td>@item.ImageUrl</td>
                    <td>
                        <a href="@Url.Action("Delete", "About" , new { id = item.AboutId})" class="btn btn-danger btn-sm"><i class="fa fa-trash">Sil</i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("UpdateAbout", "About", new { id= item.AboutId})" class="btn btn-warning btn-sm"><i class="fa fa-edit">Güncelle</i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

