@model LifeSure.Models.DataModels.TblAbout

@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Hakkımda Yazısı Ekle</h2>

@using (Html.BeginForm("AddAbout", "About", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ImageUrl)
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control"})
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
}